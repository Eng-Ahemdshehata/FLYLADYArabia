<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dim_6dp"
    tools:context=".ui.fragment.AboutMeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dim_6dp">

        <ImageView
            android:layout_width="@dimen/dim_120dp"
            android:layout_height="@dimen/dim_120dp"
            android:layout_gravity="center"
            android:src="@drawable/about_me_pic"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dim_6dp"
            android:text="@string/about_me_des"
            android:textAlignment="textStart"
            android:textSize="@dimen/txt_14sp"

            />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_1dp"
        android:layout_margin="@dimen/dim_6dp"
        android:background="@color/colorGray" />


</LinearLayout>